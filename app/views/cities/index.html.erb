<h1>Cities#index</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>city</th>
      
  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.id %></td>
        <td><%= city.name %></td>
       <td><%= link_to 'Edit', edit_city_path(city.id)%> <td><%= link_to 'show', city %> <td><%= link_to 'destroy', city, :method => :delete, data: {confirm: "Sure?"} %></td></td> 
 
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New city', new_city_path %>


